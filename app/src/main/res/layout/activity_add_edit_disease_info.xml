<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/AddLocationTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="Location"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/AddinfoTxt"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/AddinfoTxt"
            app:layout_constraintTop_toBottomOf="@+id/AddinfoTxt" />

        <EditText
            android:id="@+id/EditinfoTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="info"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/AddLongitudeTxt"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/AddLatitudeTxt"
            app:layout_constraintTop_toBottomOf="@+id/EditLatitudeTxt" />

        <EditText
            android:id="@+id/EditLongitudeTxt"
            android:layout_width="73dp"
            android:layout_height="40dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:digits="-0123456789"
            android:ems="10"
            android:hint="longitude"
            android:inputType="numberSigned"
            app:layout_constraintEnd_toEndOf="@+id/EditDiseaseTxt"
            app:layout_constraintStart_toEndOf="@+id/AddLatitudeTxt"
            app:layout_constraintTop_toBottomOf="@+id/EditDiseaseTxt" />

        <EditText
            android:id="@+id/EditLatitudeTxt"
            android:layout_width="77dp"
            android:layout_height="44dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="20dp"
            android:digits="-0123456789"
            android:ems="10"
            android:hint="latitude"
            android:inputType="numberSigned"
            app:layout_constraintStart_toStartOf="@+id/EditDiseaseTxt"
            app:layout_constraintTop_toBottomOf="@+id/EditDiseaseTxt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginTop="28dp"
            android:text="질병정보추가란"
            android:textSize="26dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginTop="44dp"
            android:text="질병정보편집란"
            android:textSize="26dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/AddLocationTxt" />

        <EditText
            android:id="@+id/AddDiseaseNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="72dp"
            android:ems="10"
            android:hint="name"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/AddLatitudeTxt"
            android:layout_width="77dp"
            android:layout_height="44dp"
            android:layout_marginTop="24dp"
            android:digits="-0123456789"
            android:ems="10"
            android:hint="latitude"
            android:inputType="numberSigned"
            app:layout_constraintStart_toStartOf="@+id/AddDiseaseNameTxt"
            app:layout_constraintTop_toBottomOf="@+id/AddDiseaseNameTxt" />

        <Button
            android:id="@+id/AddBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="400dp"
            android:text="Add"
            app:layout_constraintBottom_toTopOf="@+id/EditBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.294"
            app:layout_constraintStart_toEndOf="@+id/AddLongitudeTxt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.417"
            tools:layout_marginEnd="220dp"
            tools:layout_marginTop="360dp" />

        <EditText
            android:id="@+id/EditDiseaseTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:hint="name"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <Button
            android:id="@+id/EditBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="460dp"
            android:layout_marginEnd="52dp"
            android:text="Edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/AddLongitudeTxt"
            android:layout_width="73dp"
            android:layout_height="40dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="28dp"
            android:digits="-0123456789"
            android:ems="10"
            android:hint="longitude"
            android:inputType="numberSigned"
            app:layout_constraintEnd_toEndOf="@+id/AddDiseaseNameTxt"
            app:layout_constraintHorizontal_bias="0.464"
            app:layout_constraintStart_toEndOf="@+id/AddLatitudeTxt"
            app:layout_constraintTop_toBottomOf="@+id/AddDiseaseNameTxt" />

        <EditText
            android:id="@+id/AddinfoTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="info"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/AddLongitudeTxt"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintStart_toStartOf="@+id/AddLatitudeTxt"
            app:layout_constraintTop_toBottomOf="@+id/AddLatitudeTxt" />

        <EditText
            android:id="@+id/EditLocationTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Location"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/EditinfoTxt"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/EditinfoTxt"
            app:layout_constraintTop_toBottomOf="@+id/EditinfoTxt" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>